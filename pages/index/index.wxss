.other-navigator-hover { 
    color: burlywood;
}

.flex-wrp {
    display: flex;
    position: relative;
    justify-content: space-around;
    align-items: center;
    
}
.flex-item {
    width: 200rpx;
    height: 300rpx;
    font-size: 26rpx;
    position: relative;
    justify-content: center;
    align-items: center;
}

.demo-text-1 {
    background-color: #1AAD19;
    color: #FFFFFF;
    font-size: 36rpx;
}

